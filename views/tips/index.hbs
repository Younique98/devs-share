<h1>Tips</h1>
<div class="row">
    {{#each tips}} 
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- //this user on line 8 refers to the tip user and ../user refer to user out of the loop and grab the logged in user --}}
                {{!-- using triple curly brackets to parse html below --}}
                {{{editIcon user ../user _id}}}

            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                {{!-- wrap them in both the helpers --}}
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/tips/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/tips/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No tips to display</p>
    {{/each}}
</div>
