<div class="row">
    <div class="col s12 m8">
        <h3>{{tip.title}}
            <small>{{{editIcon tip.user user tip._id false}}}</small>
        </h3>
        <div class="card tip">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{tip.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{tip.user.displayName}}</span>
                <img src="{{tip.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/tips/user/{{tip.user._id}}">More From {{tip.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>